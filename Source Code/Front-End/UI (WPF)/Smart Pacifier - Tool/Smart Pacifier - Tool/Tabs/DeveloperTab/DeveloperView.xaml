<UserControl x:Class="Smart_Pacifier___Tool.Tabs.DeveloperTab.DeveloperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Smart_Pacifier___Tool.Tabs.DeveloperTab"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Smart_Pacifier___Tool.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Smart_Pacifier___Tool.Resources.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Define the resources -->
    <UserControl.Resources>
        <!-- Converter for dynamic column width if needed -->
        <!-- You can remove this if not used -->
        <converters:ColumnWidthConverter x:Key="ColumnWidthConverter"/>

        <!-- DataTemplate for the checkbox in each row -->
        <DataTemplate x:Key="CheckBoxCellTemplate">
            <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" />
        </DataTemplate>

        <!-- Style for the white scrollbar -->
        <Style TargetType="ScrollBar" x:Key="WhiteScrollBarStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Controls with Headers -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10" HorizontalAlignment="Center">

            <!-- Time Range Filter -->
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Time Range" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                <ComboBox x:Name="TimeRange" Width="150" SelectionChanged="ComboBox_SelectionChanged"/>
            </StackPanel>

            <!-- Campaign Filter -->
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Campaign" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                <ComboBox x:Name="Campaign" Width="150" SelectionChanged="ComboBox_SelectionChanged"/>
            </StackPanel>

            <!-- Pacifier Filter -->
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Pacifier" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                <ComboBox x:Name="Pacifier" Width="150" SelectionChanged="ComboBox_SelectionChanged"/>
            </StackPanel>

            <!-- Sensor Filter -->
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Sensor" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                <ComboBox x:Name="Sensor" Width="150" SelectionChanged="ComboBox_SelectionChanged"/>
            </StackPanel>


            <!-- Action Buttons -->
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <Button Content="Add" Width="80" Click="AddButton_Click" Style="{StaticResource SmallModernButtonStyle}"/>
            </StackPanel>
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <Button Content="Edit" Width="80" Click="EditButton_Click" Style="{StaticResource SmallModernButtonStyle}"/>
            </StackPanel>
            <StackPanel Margin="5" HorizontalAlignment="Center">
                <Button Content="Delete" Width="80" Click="DeleteButton_Click" Style="{StaticResource SmallModernButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <!-- Loading Spinner -->
            <components:LoadingSpinner x:Name="LoadingSpinner" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100"/>

            <!-- Enable horizontal scrolling by wrapping ListView in a ScrollViewer -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Resources>
                    <!-- Apply the white scrollbar style -->
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ScrollViewer.Resources>
                <ListView x:Name="DataListView" Margin="0,10,0,10" SelectionMode="Extended"
                          HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                    <ListView.View>
                        <GridView x:Name="DataGridView">
                            <!-- Columns will be added dynamically in code-behind -->
                        </GridView>
                    </ListView.View>
                    <!-- Styling and ItemContainerStyle -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="UseLayoutRounding" Value="True"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </ScrollViewer>
        </Grid>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <!-- Pagination buttons if needed -->
        </StackPanel>
    </Grid>
</UserControl>
