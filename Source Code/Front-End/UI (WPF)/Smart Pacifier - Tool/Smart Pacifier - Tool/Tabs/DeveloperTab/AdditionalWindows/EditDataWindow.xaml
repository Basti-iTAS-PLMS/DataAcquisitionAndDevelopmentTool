<Window x:Class="Smart_Pacifier___Tool.Tabs.DeveloperTab.EditDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Data" Height="600" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Placeholder for Dynamic Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="DynamicFieldsPanel" Margin="10"/>
        </ScrollViewer>

        <!-- Error Message -->
        <TextBlock Name="ErrorMessage" Grid.Row="1" Foreground="Red" Margin="10" Visibility="Collapsed" TextWrapping="Wrap"/>

        <!-- Save and Cancel Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Save" Width="100" Click="SaveButton_Click" Margin="10"/>
            <Button Content="Cancel" Width="100" Click="CancelButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
