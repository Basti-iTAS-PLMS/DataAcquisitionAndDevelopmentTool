   <Window x:Class="Smart_Pacifier___Tool.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:Smart_Pacifier___Tool"
           mc:Ignorable="d"
           Title="MainWindow" Height="720" Width="1280"
           Background="{StaticResource PrimaryBackgroundColor}">
       <Grid Background="{StaticResource PrimaryBackgroundColor}"> 
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="200"/> <!-- Sidebar width -->
               <ColumnDefinition Width="*"/>   <!-- Main content width -->
           </Grid.ColumnDefinitions>

           <!-- Sidebar -->
           <local:Sidebar Grid.Column="0"/>

           <!-- Main content -->
           <ContentControl x:Name="MainContent" Grid.Column="1" Background="{StaticResource PrimaryBackgroundColor}"/>
       </Grid>
   </Window>
   