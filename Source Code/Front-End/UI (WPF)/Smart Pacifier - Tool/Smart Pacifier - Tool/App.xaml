<Application x:Class="Smart_Pacifier___Tool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Smart_Pacifier___Tool"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Reference to the styles resource dictionary -->
                <ResourceDictionary Source="Resources/ButtonStyle.xaml" />
                <ResourceDictionary Source="Resources/ScrollBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Colors -->
            <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#333333"/>
            <SolidColorBrush x:Key="SidebarBackgroundColor" Color="#1b1c1b"/>
            <SolidColorBrush x:Key="ButtonHoverColor" Color="#555555"/>
            <SolidColorBrush x:Key="ButtonPressedColor" Color="#777777"/>
            <SolidColorBrush x:Key="TextColor" Color="White"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
