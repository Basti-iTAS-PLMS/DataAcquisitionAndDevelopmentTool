<Window x:Class="Smart_Pacifier___Tool.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Pacifier___Tool"
        mc:Ignorable="d"
        Title="Smart Pacifier Tool" Height="450" Width="800">
    <Grid>
        <!-- Write Data Button -->
        <Button Content="Write Data to InfluxDB" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="50" Margin="10,10,0,0" Click="OnWriteDataButtonClick"/>

        <!-- Read Data Button -->
        <Button Content="Read Data from InfluxDB" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="50" Margin="10,70,0,0" Click="OnReadDataButtonClick"/>

        <!-- TextBox to display results -->
        <TextBox x:Name="ResultsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="200" Margin="10,140,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
