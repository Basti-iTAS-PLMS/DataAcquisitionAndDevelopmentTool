<Window x:Class="SmartPacifier.BackEnd.DatabaseLayer.InfluxDB.Components.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uploading Data" Height="200" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="ProgressMessage" 
                   Text="Uploading data to the database..." 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="16" 
                   Margin="0,20,0,0"/>

        <ProgressBar Name="ProgressBar" 
                     Minimum="0" 
                     Maximum="100" 
                     Height="20" 
                     Width="300" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" />

        <Button Content="Cancel" 
                Name="CancelButton" 
                Width="100" 
                Height="30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,30" 
                Click="OnCancelClick"/>
    </Grid>
</Window>
